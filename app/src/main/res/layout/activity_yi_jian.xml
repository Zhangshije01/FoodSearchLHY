<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/color_background_gggg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="反馈内容"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textSize="@dimen/text_size_bigger"/>

        <EditText

            android:layout_marginTop="10dp"
            android:background="@drawable/shape_search_bar_shaixuan_up"
            android:layout_height="136dp"
            android:layout_width="match_parent"
            android:id="@+id/et_my_yijian"
            android:textSize="14sp"
            android:textColor="@color/color_background_gggg"
            android:gravity="start"
            android:padding="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:textColorHint="#cccccc"
            android:hint="我来说两句"
            android:maxLines="10"/>

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_bigger"
            android:text="邮箱或手机"/>

        <EditText
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_search_bar_shaixuan_up"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:id="@+id/et_my_shouji"
            android:textSize="14sp"
            android:textColor="@color/color_background_gggg"
            android:gravity="start"
            android:padding="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:textColorHint="#cccccc"
            android:hint="选填  以便我们联系您"
            android:maxLines="10"/>

        <Button
            android:id="@+id/button_my_tijiao"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="30dp"
            android:text="确认提交"
            android:background="@drawable/shape_search_bar_shaixuan_down"/>
    </LinearLayout>

</layout>
