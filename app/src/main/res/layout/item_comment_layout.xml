<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/iv_item_comment_avatar"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp" >

        <TextView
            android:id="@+id/tv_item_comment_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:singleLine="true"
            android:text="马兰拉面"
            android:textColor="#ff000000"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_item_comment_rating"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:src="@mipmap/movie_star50" />

            <TextView
                android:id="@+id/tv_item_comment_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="￥110元/人"
                android:textColor="#ff6e6e6e"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_item_comment_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="潘家园面食潘家园面食潘家园面食潘家园面食潘家园面食潘家园面食潘家园面食"
            android:textColor="#ff6e6e6e"
            android:textSize="14sp" />
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            >
            
            <ImageView 
                android:id="@+id/iv_item_comment_img1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="5dp"
                android:src="@mipmap/bucket_no_picture"
                />
             <ImageView 
                android:id="@+id/iv_item_comment_img2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="5dp"
                android:src="@mipmap/bucket_no_picture"
                />
              <ImageView 
                android:id="@+id/iv_item_comment_img3"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@mipmap/bucket_no_picture"
                />
            
        </LinearLayout>
        
    </LinearLayout>

</LinearLayout>