<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <ImageView
        android:id="@+id/iv_search_food_pic"
        android:layout_width="100dp"
        android:layout_marginLeft="15dp"
        android:layout_height="100dp"
        android:src="@mipmap/bucket_no_picture"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical">

        <com.yang.foodsearch.view.TextViewPlus
            android:id="@+id/tv_search_food_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/text_size_bigger"
            android:text="食平方"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_search_food_pingfen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/movie_star10"/>
            <com.yang.foodsearch.view.TextViewPlus
                android:id="@+id/tv_search_food_pingfen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textSize="@dimen/text_size_big"
                android:text="评分"/>
        </LinearLayout>

        <com.yang.foodsearch.view.TextViewPlus
            android:id="@+id/tv_search_food_caixi"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/text_size_big"
            android:maxLength="16"
            android:text="云南菜"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <com.yang.foodsearch.view.TextViewPlus
                android:id="@+id/tv_search_food_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/text_size_big"
                android:text="￥89/人"/>
            <com.yang.foodsearch.view.TextViewPlus
                android:id="@+id/tv_search_food_address"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="地址信息"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>