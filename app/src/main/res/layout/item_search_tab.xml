<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_tab_business_bar_fujin"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableRight="@mipmap/ic_arrow_down_black"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:text="附近"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textSize="@dimen/text_size_bigger" />

        <TextView
            android:id="@+id/tv_tab_business_bar_meishi"

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableRight="@mipmap/ic_arrow_down_black"
            android:gravity="center"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:layout_marginRight="10dp"

            android:text="美食"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textSize="@dimen/text_size_bigger"/>

        <TextView
            android:id="@+id/tv_tab_business_bar_paixu"

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableRight="@mipmap/ic_arrow_down_black"
            android:gravity="center"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:layout_marginRight="10dp"

            android:text="智能排序"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textSize="@dimen/text_size_bigger" />

        <TextView
            android:id="@+id/tv_tab_business_bar_shaixuan"

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableRight="@mipmap/ic_arrow_down_black"
            android:gravity="center"
            android:paddingBottom="3dp"
            android:layout_marginRight="10dp"

            android:text="筛选"
            android:paddingTop="3dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textSize="@dimen/text_size_bigger" />

    </LinearLayout>

</layout>